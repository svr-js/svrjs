{
  "name": "svrjs-build",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm run clean && npm run build:page && tsc --noEmit && NODE_ENV=production node esbuild.config.js",
    "build:page": "cd page && npm run build",
    "cz": "cz",
    "clean": "rimraf dist && rimraf out && rimraf wwwroot && rimraf core",
    "dev": "npm run clean && npm run build:page && concurrently \"NODE_ENV=development node esbuild.config.js\" \"wait-on dist/svr.js && nodemon dist/svr.js --stdout-notty --no-save-config\"",
    "dev:page": "cd page && npm run dev",
    "lint": "npm run lint:server && npm run lint:page",
    "lint:fix": "npm run lint:server-fix && npm run lint:page-fix",
    "lint:page": "cd page && npm run lint",
    "lint:page-fix": "cd page && npm run lint:fix",
    "lint:server": "eslint --no-error-on-unmatched-pattern src/**/*.d.ts src/*.d.ts src/**/*.js src/*.js tests/**/*.test.js tests/**/*.js tests/*.test.js tests/*.js",
    "lint:server-fix": "npm run lint:server -- --fix",
    "postinstall": "cd page && npm install",
    "prepare": "husky",
    "start": "node dist/svr.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:middleware": "jest tests/middleware",
    "test:utils": "jest tests/utils"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@eslint/js": "^9.9.0",
    "archiver": "^7.0.1",
    "commitizen": "^4.3.0",
    "concurrently": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.23.1",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@techteamer/ocsp": "^1.0.1",
    "fetch-blob": "^2.1.2",
    "formidable": "^2.1.2",
    "globalthis": "^1.0.4",
    "lru-cache": "^10.4.3",
    "mime-db": "^1.53.0",
    "node-abort-controller": "^3.1.1",
    "node-fetch": "^2.7.0",
    "tar": "^6.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
